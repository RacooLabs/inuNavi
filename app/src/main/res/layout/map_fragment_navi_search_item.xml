<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/map_frag_navi_search_item_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/map_frag_navi_search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxWidth="200dp"
        android:gravity="center|left"
        android:text="자연과학대학·생명과학기술대학"
        android:textSize="@dimen/main_text_size"
        android:textColor="@color/main_color"
        android:layout_marginLeft="24dp"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"
        >

    </TextView>

    <TextView
        android:id="@+id/map_frag_navi_search_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/map_frag_navi_search_item_title"
        app:layout_constraintTop_toTopOf="@id/map_frag_navi_search_item_title"
        app:layout_constraintBottom_toBottomOf="@id/map_frag_navi_search_item_title"
        android:text="13호관"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/main_text_color"
        android:layout_marginLeft="12dp"
        >

    </TextView>

    <TextView
        android:id="@+id/map_frag_navi_search_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/map_frag_navi_search_item_title"
        app:layout_constraintBottom_toBottomOf="@id/map_frag_navi_search_item_title"
        app:layout_constraintRight_toRightOf="parent"
        android:text="320m"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/main_text_color"
        android:layout_marginRight="24dp"
        >

    </TextView>





    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#F2F2F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>