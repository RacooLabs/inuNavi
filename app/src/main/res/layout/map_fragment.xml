<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maru.inunavi.ui.map.MapFragment"
    >


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/autoCompleteTextView_search_wrapper"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/layout_search_roundedbox_map"
            android:elevation="12dp"
            android:hint="검색"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:maxLength="20"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/hint_text_normal"
            android:textSize="@dimen/main_text_size">

        </AutoCompleteTextView>

    </LinearLayout>



    <TextView
        android:id="@+id/search_button"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="O"
        android:textColor="@color/white"
        android:layout_marginRight="16.5dp"
        app:layout_constraintRight_toRightOf="@id/autoCompleteTextView_search_wrapper"
        app:layout_constraintTop_toTopOf="@id/autoCompleteTextView_search_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/autoCompleteTextView_search_wrapper"
        android:background="@drawable/layout_map_search_btn"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/clear_button"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:layout_marginRight="16.5dp"
        app:layout_constraintRight_toRightOf="@id/autoCompleteTextView_search_wrapper"
        app:layout_constraintTop_toTopOf="@id/autoCompleteTextView_search_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/autoCompleteTextView_search_wrapper"
        android:background="@drawable/layout_map_search_btn"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/reset_button"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="R"
        android:textColor="@color/white"
        android:layout_marginRight="16.5dp"
        app:layout_constraintRight_toRightOf="@id/autoCompleteTextView_search_wrapper"
        app:layout_constraintTop_toTopOf="@id/autoCompleteTextView_search_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/autoCompleteTextView_search_wrapper"
        android:background="@drawable/layout_map_search_btn"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/AR_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="AR"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        android:background="@drawable/layout_map_sub_button"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/now_navi_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="다음\n강의실"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AR_button"
        android:visibility="visible"
        android:background="@drawable/layout_map_sub_button"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"

        android:clickable="true"
        android:layout_margin="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>