<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/tita_search_option_major_topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/top_bar_leftPadding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"

        >

        <ImageView
            android:id="@+id/tita_search_option_major_backButton"
            android:layout_width="@dimen/top_bar_button_size"
            android:layout_height="@dimen/top_bar_button_size"
            android:src="@drawable/ic_clear_black_24dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공/영역"
            android:layout_marginLeft="16dp"
            android:textColor="@color/main_color"
            android:textSize="@dimen/top_bar_textSize"
            android:textStyle="bold" />

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/major_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tita_search_option_major_topBar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>