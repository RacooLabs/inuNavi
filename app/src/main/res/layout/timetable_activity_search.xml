<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/tita_search_topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/top_bar_leftPadding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"

        >

        <ImageView
            android:id="@+id/tita_search_backButton"
            android:layout_width="@dimen/top_bar_button_size"
            android:layout_height="@dimen/top_bar_button_size"
            android:src="@drawable/ic_clear_black_24dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:layout_marginLeft="16dp"
            android:textColor="@color/main_color"
            android:textSize="@dimen/top_bar_textSize"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tita_search_topBar"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/layout_search_roundedbox"
            android:hint="검색"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/hint_text_normal"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="4dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과목명"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginRight="4dp"
                    android:buttonTint="@color/main_color"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="교수명"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginRight="4dp"
                    android:buttonTint="@color/main_color"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과목코드"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginRight="4dp"
                    android:buttonTint="@color/main_color"/>

            </RadioGroup>

            <TextView
                android:layout_width="96dp"
                android:layout_height="24dp"
                android:background="@drawable/layout_more_option_button_roundedbox"
                android:text="더 많은 옵션"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"/>


        </LinearLayout>






    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>