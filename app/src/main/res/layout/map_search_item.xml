<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/map_search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/map_search_item_distance"
        app:layout_constraintTop_toTopOf="parent"
        android:text="정보기술대학"
        android:gravity="center_vertical"
        android:textSize="@dimen/main_text_size"
        android:textColor="@color/main_color"
        android:layout_marginLeft="24dp"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="6dp"
        >

    </TextView>

    <TextView
        android:id="@+id/map_search_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/map_search_item_title"
        app:layout_constraintTop_toTopOf="@id/map_search_item_title"
        app:layout_constraintBottom_toBottomOf="@id/map_search_item_title"
        android:text="13호관"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/main_text_color"
        android:layout_marginLeft="12dp"
        >

    </TextView>

    <TextView
        android:id="@+id/map_search_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_search_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="320m"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/main_text_color"
        android:layout_marginLeft="24dp"
        >

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_search_item_directionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:background="@drawable/layout_map_list_button"
        android:clickable="true">

        <TextView

            android:layout_width="80dp"
            android:layout_height="@dimen/editText_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="길찾기"
            android:textSize="12sp"
            android:textColor="@color/main_color"
            android:gravity="right|center_vertical"
            android:paddingRight="14dp"

            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/map_search_item_directionIcon"
            app:layout_constraintTop_toTopOf="@id/map_search_item_directionButton"
            app:layout_constraintBottom_toBottomOf="@id/map_search_item_directionButton"
            app:layout_constraintLeft_toLeftOf="@id/map_search_item_directionButton"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_turn_sharp_left_black_24dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>