<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView_change_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="비밀번호 변경"
        android:textColor="@color/main_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/change_password_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        />



    <LinearLayout
        android:id="@+id/change_password_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_change_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <EditText
                android:id="@+id/editText_change_password_origin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/layout_login_round_box"
                android:hint="기존 비밀번호"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/editText_padding"
                android:paddingRight="@dimen/editText_padding"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/main_text_size" />

            <ImageView
                android:id="@+id/change_password_origin_done_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_done_black_24dp"
                android:visibility="invisible"
                />


        </RelativeLayout>

        <TextView
            android:id="@+id/textView_origin_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기존 비밀번호 문제"
            android:textSize="@dimen/warning_text_size"
            android:textColor="@color/warning_color"
            android:visibility="gone"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editText_change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_height"
                android:background="@drawable/layout_login_round_box"
                android:hint="새로운 비밀번호"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/editText_padding"
                android:paddingRight="@dimen/editText_padding"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/main_text_size" />


            <ImageView
                android:id="@+id/change_password_done_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_done_black_24dp"
                android:visibility="invisible"

                />




        </RelativeLayout>

        <TextView
            android:id="@+id/textView_password_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로운 비밀번호 문제"
            android:textSize="@dimen/warning_text_size"
            android:textColor="@color/warning_color"
            android:visibility="gone"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editText_change_password_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_height"
                android:background="@drawable/layout_login_round_box"
                android:hint="새로운 비밀번호 확인"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/editText_padding"
                android:paddingRight="@dimen/editText_padding"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/main_text_size" />

            <ImageView
                android:id="@+id/change_password_second_done_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_done_black_24dp"
                android:visibility="invisible"
                />



        </RelativeLayout>

        <TextView
            android:id="@+id/textView_password_second_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로운 비밀번호 확인 문제"
            android:textColor="@color/warning_color"
            android:textSize="@dimen/warning_text_size"
            android:visibility="gone"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            />


        <TextView
            android:id="@+id/button_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_login_signup_button_round_box"
            android:text="변경"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size"
            android:clickable="true"

            />

        <TextView
            android:id="@+id/textView_change_password_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText_height"
            android:layout_weight="5"
            android:textSize="@dimen/main_text_size"
            android:gravity="center"
            android:text="이전으로"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            />


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>