<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.maru.inunavi.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/map_fragment" />

    <fragment
        android:id="@+id/navigation_satisfied"
        android:name="com.maru.inunavi.ui.satisfied.SatisfiedFragment"
        android:label="@string/title_satisfied"
        tools:layout="@layout/satisfied_fragment" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.maru.inunavi.ui.timetable.CalendarFragment"
        android:label="@string/title_timetable"
        tools:layout="@layout/timetable_fragment" />

    <fragment
        android:id="@+id/navigation_recommend"
        android:name="com.maru.inunavi.ui.recommend.RecommendFragment"
        android:label="@string/title_recommend"
        tools:layout="@layout/recommend_fragment" />

</navigation>